{
  "components": [
    {
      "type": "content",
      "container": "main",
      "components": [
        {
          "type": "heading",
          "name": "pageTitle",
          "size": "H1",
          "text": "Base"
        },
        {
          "type": "row",
          "components": [
            {
              "type": "col",
              "class": "col-md-12",
              "components": [
                {
                  "name": "grid0",
                  "allowDelete": true,
                  "confirmDelete": true,
                  "allowAdd": true,
                  "allowFiltering": true,
                  "allowMultiSorting": false,
                  "allowPaging": true,
                  "allowSorting": true,
                  "count": "${getBasesCount}",
                  "data": "${getBasesResult}",
                  "events": {
                    "loadData": [
                      {
                        "name": "dbSinDarEla.getBases",
                        "parameters": [
                          {
                            "name": "$top",
                            "value": "event.top"
                          },
                          {
                            "name": "$skip",
                            "value": "event.skip"
                          },
                          {
                            "name": "$count",
                            "value": "event.top != null && event.skip != null"
                          },
                          {
                            "name": "$filter",
                            "value": "${event.filter}"
                          },
                          {
                            "name": "$orderby",
                            "value": "${event.orderby}"
                          },
                          {
                            "name": "$expand",
                            "value": "BaseAnreden"
                          }
                        ],
                        "then": [
                          {
                            "name": "getBasesResult",
                            "type": "set",
                            "value": "${result.value}"
                          },
                          {
                            "name": "getBasesCount",
                            "type": "set",
                            "value": "event.top != null && event.skip != null ? result['@odata.count'] : ${result.value.length}"
                          }
                        ],
                        "type": "invoke",
                        "error": [
                          {
                            "detail": "Unable to load Bases",
                            "severity": "error",
                            "summary": "Error",
                            "type": "notify"
                          }
                        ]
                      }
                    ],
                    "delete": [
                      {
                        "error": [
                          {
                            "detail": "Unable to delete Base",
                            "severity": "error",
                            "summary": "Error",
                            "type": "notify"
                          }
                        ],
                        "name": "dbSinDarEla.deleteBase",
                        "parameters": [
                          {
                            "name": "BaseID",
                            "value": "${event.BaseID}"
                          }
                        ],
                        "then": [
                          {
                            "detail": "Base deleted!",
                            "severity": "success",
                            "summary": "Success",
                            "type": "notify"
                          }
                        ],
                        "type": "invoke"
                      }
                    ],
                    "add": [
                      {
                        "path": "add-base",
                        "type": "popup"
                      }
                    ],
                    "rowSelect": [
                      {
                        "parameters": [
                          {
                            "name": "BaseID",
                            "value": "${event.BaseID}"
                          }
                        ],
                        "path": "edit-base",
                        "type": "popup"
                      }
                    ]
                  },
                  "title": "",
                  "columns": [
                    {
                      "property": "BaseID",
                      "title": "Base ID",
                      "type": "integer"
                    },
                    {
                      "property": "AnredeID",
                      "sortProperty": "BaseAnreden.Anrede",
                      "filterProperty": "BaseAnreden.Anrede",
                      "template": "${data.BaseAnreden?.Anrede}",
                      "title": "Base Anreden",
                      "type": "string"
                    },
                    {
                      "property": "Name1",
                      "title": "Name 1",
                      "type": "string"
                    },
                    {
                      "property": "Name2",
                      "title": "Name 2",
                      "type": "string"
                    },
                    {
                      "property": "NameKuerzel",
                      "title": "Name Kuerzel",
                      "type": "string"
                    },
                    {
                      "property": "TitelVorne",
                      "title": "Titel Vorne",
                      "type": "string"
                    },
                    {
                      "property": "TitelHinten",
                      "title": "Titel Hinten",
                      "type": "string"
                    },
                    {
                      "property": "Strasse",
                      "title": "Strasse",
                      "type": "string"
                    },
                    {
                      "property": "PLZ",
                      "title": "PLZ",
                      "type": "string"
                    },
                    {
                      "property": "Ort",
                      "title": "Ort",
                      "type": "string"
                    },
                    {
                      "property": "Geburtsdatum",
                      "formatString": "medium",
                      "title": "Geburtsdatum",
                      "type": "string",
                      "format": "date-time"
                    },
                    {
                      "property": "Versicherungsnummer",
                      "title": "Versicherungsnummer",
                      "type": "string"
                    },
                    {
                      "property": "Staatsangehoerigkeit",
                      "title": "Staatsangehoerigkeit",
                      "type": "string"
                    },
                    {
                      "property": "Telefon1",
                      "title": "Telefon 1",
                      "type": "string"
                    },
                    {
                      "property": "Telefon2",
                      "title": "Telefon 2",
                      "type": "string"
                    },
                    {
                      "property": "EMail1",
                      "title": "E Mail 1",
                      "type": "string"
                    },
                    {
                      "property": "EMail2",
                      "title": "E Mail 2",
                      "type": "string"
                    },
                    {
                      "property": "Webseite",
                      "title": "Webseite",
                      "type": "string"
                    },
                    {
                      "property": "BildURL",
                      "title": "Bild URL",
                      "type": "string"
                    },
                    {
                      "property": "Notiz",
                      "title": "Notiz",
                      "type": "string"
                    },
                    {
                      "property": "KontoName",
                      "title": "Konto Name",
                      "type": "string"
                    },
                    {
                      "property": "KontoNummer",
                      "title": "Konto Nummer",
                      "type": "string"
                    },
                    {
                      "property": "KontoInfo",
                      "title": "Konto Info",
                      "type": "string"
                    }
                  ],
                  "type": "grid",
                  "confirmDeleteText": "Are you sure you want to delete this record?",
                  "confirmDeleteTitle": "Confirmation",
                  "confirmDeleteOkText": "Ok",
                  "confirmDeleteCancelText": "Cancel",
                  "emptyText": "No records to display.",
                  "addText": "Add",
                  "clearFilterText": "Clear",
                  "applyFilterText": "Apply",
                  "equalsText": "Equals",
                  "notEqualsText": "Not equals",
                  "lessThanText": "Less than",
                  "lessThanOrEqualsText": "Less than or equals",
                  "greaterThanText": "Greater than",
                  "greaterThanOrEqualsText": "Greater than or equals",
                  "endsWithText": "Ends with",
                  "containsText": "Contains",
                  "startsWithText": "Starts with"
                }
              ]
            }
          ]
        }
      ]
    }
  ],
  "events": {
    "load": [
      {
        "type": "execute",
        "code": "this.grid0.load();"
      }
    ]
  },
  "name": "Base",
  "access": [
    "Authenticated"
  ],
  "layout": "Main"
}