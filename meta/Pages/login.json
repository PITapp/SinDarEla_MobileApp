{
  "access": [
    "Everybody"
  ],
  "components": [
    {
      "components": [
        {
          "components": [
            {
              "class": "col-md-12",
              "components": [
                {
                  "allowRegister": false,
                  "allowResetPassword": false,
                  "events": {
                    "login": [
                      {
                        "error": [
                          {
                            "detail": "${result.error.message}",
                            "severity": "error",
                            "summary": "",
                            "type": "notify"
                          }
                        ],
                        "name": "Security.login",
                        "parameters": [
                          {
                            "name": "username",
                            "value": "${event.username}"
                          },
                          {
                            "name": "password",
                            "value": "${event.password}"
                          }
                        ],
                        "then": [
                          {
                            "error": [
                              {
                                "code": "localStorage.setItem(\"globalBenutzerBaseID\",\"0\");",
                                "type": "execute"
                              }
                            ],
                            "name": "dbSinDarEla.getBenutzers",
                            "parameters": [
                              {
                                "name": "$filter",
                                "value": "Benutzername eq '${event.username}'"
                              }
                            ],
                            "then": [
                              {
                                "code": "localStorage.setItem(\"globalBenutzerBaseID\",${result.value[0].BaseID});",
                                "type": "execute"
                              }
                            ],
                            "type": "invoke"
                          }
                        ],
                        "type": "invoke"
                      }
                    ],
                    "register": []
                  },
                  "loginText": "Anmelden",
                  "name": "login0",
                  "passwordRequired": "Passwort erfoderlich",
                  "passwordText": "Passwort",
                  "registerMessageText": "",
                  "registerText": "",
                  "resetPasswordText": "Forgot password",
                  "type": "login",
                  "userRequired": "Benutzername erforderlich",
                  "userText": "Benutzername"
                }
              ],
              "type": "col"
            }
          ],
          "type": "row"
        }
      ],
      "container": "main",
      "type": "content"
    }
  ],
  "events": {
    "load": [
      {
        "code": "setTimeout(() => { document.getElementById('username').focus(); }, 500)",
        "type": "execute"
      }
    ]
  },
  "layout": "Login",
  "name": "Login"
}